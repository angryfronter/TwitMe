<% provide :page_title, 'Reset password' %>
<% currently_at 'Log in' %>

<h1 class="mb-4">Reset password</h1>

<%= form_with url: password_reset_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :email, value: params[:email], class: 'form-control-lg', required: true %>
    </div>
  </div>

  <%= f.submit 'Reset password', class: 'btn btn-primary' %>
  <%= link_to 'Go Back', new_session_path, class: 'btn btn-secondary' %>
<% end %>